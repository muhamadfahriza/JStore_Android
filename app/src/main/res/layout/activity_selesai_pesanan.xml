<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/staticIdInvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Invoice:"
                android:ems="10"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/staticNamaCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Nama Customer:"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/staticNamaItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Item:"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/staticTanggalPesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Pesan:"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/staticTotalBiaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Biaya:"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/staticStatusInvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Invoice:"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/staticTipeInvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipe Invoice:"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/staticDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due Date:"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/staticPeriodeInstallment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Periode Installment:"
                android:paddingBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/idInvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:ems="10"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/namaCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="TextView"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/namaItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/tanggalPesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/totalBiaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/statusInvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/tipeInvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/dueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/periodeInstallment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingBottom="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/batal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batal" />

        <Button
            android:id="@+id/selesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selesai" />
    </LinearLayout>
</LinearLayout>